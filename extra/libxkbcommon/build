#!/bin/sh -e

export DESTDIR="$1"

# Disable valgrind test, incompatible with muon.
sed "s/valgrind.found()/false/" meson.build > _
mv -f _ meson.build

muon setup \
    -Dprefix=/usr \
    -Dlibexecdir=/usr/lib \
    -Ddefault_library=both \
    -Denable-docs=false \
    -Denable-wayland=false \
    -Denable-xkbregistry=false \
    build

ninja -C build
muon  -C build install
