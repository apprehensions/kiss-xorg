#!/bin/sh -e

export DESTDIR="$1"

opts="\
-Dprefix=/usr \
-Dalsa=enabled \
-Dlibmpv=true \
-Dwayland=disabled \
-Dx11=enabled \
"

# muon does not support meson.build_options
sed "s|meson.build_options()|'$opts'|g" meson.build > _
mv _ meson.build

# shellcheck disable=SC2086
muon setup \
    $opts \
    build

ninja -C build
muon  -C build install

rm -rf \
    "$1/usr/share/zsh" \
    "$1/usr/share/bash-completion"
